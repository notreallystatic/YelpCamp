<%- include("../partials/header") %>

<h1 class="h3 mb-3 font-weight-normal text-center">Edit Comment</h1>
<br />
<div class="row justify-content-md-center">
  <div class="col-lg-4 col-md-8 col-sm-12">
    <form
      action="/campgrounds/<%=campground_slug%>/comments/<%=comment._id%>?_method=PUT"
      method="POST"
    >
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="comment[text]"
          value="<%= comment.text %>"
        />
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
      </div>
    </form>
    <a href="/campgrounds">Go Back?</a>
  </div>
</div>

<%- include("../partials/footer") %>
