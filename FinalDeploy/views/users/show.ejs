<%- include("../partials/header") %>

<div class="row">
	<div class="container">
		<div class="col-md-3">
			<h1><%= user.firstName + " " + user.lastName %></h1>
			<div class="thumbnail">
				<img src="<%= user.avatar %>">
				<div class="caption"><a href="mailto:<%= user.email %>"><%= user.email %></a></div>
			</div>
		</div>
		<div class="col-md-6">
			<h1><%= user.username %>'s Campgrounds:</h1>
			<% campgrounds.forEach(function(campground) { %>
			<li><a href="/campgrounds/<%= campground.slug %>"><%= campground.name %></a></li>
			<% }) %>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>